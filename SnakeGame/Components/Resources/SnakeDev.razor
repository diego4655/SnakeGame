@page "/snake"
@using SnakeGame.Components.Resources.Externals
@inject IJSRuntime js


<div class="container" >

	<div class="score-info">
		<button class="start-button" @onclick="(e) => StartTheGame()"> Start </button>
		<div class="score">Current Score: @score.CurrentScore</div>

	</div>

	<div class="snake-board"
		 tabindex="0"
		 @onkeydown="@(e => ControlSnakeDirection(e))">
		@for (int row = 1; row < GameHelper.NO_OF_ROWS; row++)
		{
			@for (int col = 1; col < GameHelper.N0_OF_COLS; col++)
			{
				bool isSnakeCell = IsSnakeCell(row, col);
				bool isSnakeHead = IsSnakeHead(row, col);
				bool isFoodCell = IsFoodCell(row, col);

				<div class="cell @(isSnakeCell && !isSnakeHead ? "snake-body" : "")">
					@if (isSnakeCell)
					{
						@if (isSnakeHead)
						{
							<span>🐲</span>
						}
						else
						{
							<span>●</span>
						}
					}
					@if (isFoodCell)
					{
						<span>🍎</span>
					}
				</div>
			}
		}
	</div>
</div>

<style>
    .score-info {
        display: flex;
        flex-direction: row;
        justify-content: center;
        gap: 5px;
    }

    .score {
        font-size: 26px;
        font-family: 'Raleway', sans-serif;
        color: #18d26e;
        background: rgba(0, 0, 0, 0.9);
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        border-radius: 5px;
        width: 15.2rem;
        height: 45px;
    }

    .start-button {
        font-size: 26px;
        font-family: 'Raleway', sans-serif;
        color: #18d26e;
        background: rgba(0, 0, 0, 0.9);
        border: rgba(0, 0, 0, 0.9);
        border-radius: 5px;
        width: 15.2rem;
        height: 45px;
    }

    .snake-board {
        display: grid;
        grid-template-columns: repeat(15, 1fr);
        grid-template-rows: repeat(15, 1fr);
        grid-gap: 2px;
        border: 2px solid #000;
        width: 31rem;
        height: 31rem;
        background: rgba(0, 0, 0, 0.9);
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        padding: 10px;
        margin: 0 auto;
        border-radius: 10px;
    }

    .cell {
        width: 100%;
        height: 100%;
        background-color: #444;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        line-height: 1.2;
        border-radius: 5px;
        border: 1px solid transparent;
    }

    .snake-body {
        background-color: green;
    }

</style>


